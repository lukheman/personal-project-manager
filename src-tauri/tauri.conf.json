{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Personal Project Manager",
  "version": "0.1.0",
  "identifier": "com.personalprojectmanager.dev",
  "build": {
    "devUrl": "http://127.0.0.1:50000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Personal Project Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "http://127.0.0.1:50000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}